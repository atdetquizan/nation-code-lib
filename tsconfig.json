{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false, // Permite asignar `undefined` m√°s flexible
    "declaration": true, // Genera archivos .d.ts
    "declarationMap": true // Genera source maps para los archivos .d.ts
  }
}
